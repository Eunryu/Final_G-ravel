<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/top_bar"
        android:src="@drawable/intro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/join_write_title"
        android:textColor="#f3a00f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_id" />

        <EditText
            android:id="@+id/et_JoinWrite_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/join_write_id"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_JoinWrite_idCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:text="@string/join_write_sameCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_pw" />

        <EditText
            android:id="@+id/et_JoinWrite_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/join_write_pw"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_pw2" />

        <EditText
            android:id="@+id/btn_JoinWrite_pw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/join_write_pw"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tv_JoinWrite_pwCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_pws" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_nickname" />

        <EditText
            android:id="@+id/et_JoinWrite_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/join_write_nickname" />

        <Button
            android:id="@+id/btn_JoinWrite_nicknameCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:text="@string/join_write_sameCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_phone" />

        <EditText
            android:id="@+id/et_JoinWrite_phone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/join_write_phone"
            android:inputType="phone"
            android:maxEms="3"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_JoinWrite_phoneCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:text="@string/join_write_sameCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_email" />

        <EditText
            android:id="@+id/edt_JoinWriter_email1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/join_write_email"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_e" />

        <EditText
            android:id="@+id/edt_JoinWriter_email2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/join_write_email"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_write_address" />

        <EditText
            android:id="@+id/edt_JoinWriter_address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/join_write_address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_JoinWriter_Next"
            style="?android:attr/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="@string/join_write_next"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_JoinWriter_cancle"
            style="?android:attr/buttonStyle"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="@string/join_write_cancle"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>