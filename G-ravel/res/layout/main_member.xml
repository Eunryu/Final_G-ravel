<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/top_bar"
        android:src="@drawable/intro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_Member_Gotravel"
            style="?android:attr/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="@string/main_goTravel"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Member_TravelNote"
            style="?android:attr/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="@string/main_TravelNote"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_Member_G_map"
            style="?android:attr/buttonStyle"
            android:background="@drawable/button"
            android:text="@string/main_G_map"
            android:textColor="#ffffff"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Member_G_train"
            style="?android:attr/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/button"
            android:text="@string/main_G_train"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_Member_Tips"
            style="?android:attr/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/button"
            android:text="@string/main_Tips"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_Member_event"
            style="?android:attr/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/button"
            android:text="@string/main_event"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_Member_myinfo"
            style="?android:attr/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/button"
            android:text="@string/main_myinfo"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_Member_setting"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/button"
            android:text="@string/main_setting"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>