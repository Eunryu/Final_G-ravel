<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/top_bar"
        android:src="@drawable/intro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/MyInfo_Title_SeeMyInfo"
        android:textColor="#f3a00f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MyInfo_name" />

        <TextView
            android:id="@+id/tv_SeeMyInfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MyInfo_nickname" />

        <TextView
            android:id="@+id/tv_SeeMyInfo_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MyInfo_address" />

        <TextView
            android:id="@+id/tv_SeeMyInfo_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MyInfo_phone" />

        <TextView
            android:id="@+id/tv_SeeMyInfo_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MyInfo_email" />

        <TextView
            android:id="@+id/tv_SeeMyInfo_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_SeeMyInfo_fixMyinfo"
            style="?android:attr/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="@string/MyInfo_fixinfo"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_SeeMyInfo_fixpassword"
            style="?android:attr/buttonStyle"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="@string/MyInfo_fixpassword"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>